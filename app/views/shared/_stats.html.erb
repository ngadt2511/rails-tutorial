<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path @user %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
  <% end %>
    <%= t ".following" %>
  <%= link_to followers_user_path @user %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
